<% carousel_ejs = function(){ 
    var argObj, last;
    arguments = [...arguments];
    last = arguments[arguments.length-1];
    if(typeof last === 'object' && last !== null && !(Array.isArray(last))){
        argObj = arguments.pop();
    }
    last = undefined %>

    <% if(arguments.includes('first')){ %>
        <script>
            $(document).ready(function(){
                $('.carousel').slick({
                infinite: true,
                slidesToShow: 8.5,
                slidesToScroll: 1,
                adaptiveHeight: true,
                });
            });
        </script>
    <% } %>

    <style scoped>
        .carousel-container{
            margin: 10px 0px;
        }

        .carousel .element{
            display: flex;
            justify-content: center;
            align-items: center;
            height: 90px;
        }
        
        .carousel .element img{
            height: 80px;
            transition: all 0.5s ease;
        }

        .carousel .element img:hover{
            height: 90px;
        }

        .carousel-container .title{
            height: 60px;
            line-height: 60px;
        }

    </style>

    <style scoped>
    /* slick button */

        .slick-prev,
        .slick-next {
            display: block;
            position: absolute;
            font-size: 0;
            -webkit-text-stroke-width: 2px;
            top:0;
            width:3rem;
            height: 100%;
            border: 0;
            /* color: rgb(var(--rgb-6)); */
            -webkit-text-stroke-color: rgb(var(--rgb-6));
            background-color: hsl(var(--hsl-1),5%,30%);
            z-index: 1;
            transition: all 0.5s ease;
        }

        .slick-prev {
            left: 0px;
        }

        .slick-next {
            right: 0px;
            /* text-align: right; */
        }

        .slick-prev:after {
            content: "<";
            font-size: 2rem;
        }

        .slick-next:after {
            content: ">";
            font-size: 2rem;
        }

        .slick-prev:hover,
        .slick-next:hover {
            background-color: rgb(var(--rgb-1));
        }

        .slick-prev:hover:after,
        .slick-next:hover:after {
            /* color: rgb(var(--rgb-6)); */
            font-size: 2.5rem;
            -webkit-text-stroke-color: rgb(var(--rgb-3));
            text-shadow: 1px 1px 5px rgb(var(--rgb-6)), 1px 1px 5px rgb(var(--rgb-6)), 1px 1px 10px rgb(var(--rgb-3));
        }

    </style>

    <div class="carousel-container">
        <div class="title">
            <p class="margin"><%= argObj.title %></p>
        </div>

        <div class="carousel">
            <% for(i = 0; i < argObj.img.length; i++){ %>
                <div class="element"><img src="https://i3.ytimg.com/vi/<%= argObj.img[i] %>/maxresdefault.jpg" draggable="false"></div>
            <% } %>
        </div>
    </div>


<% } %> 